{% form_theme form 'ProdekoIlmoBundle:Form:ilmo.formtheme.html.twig' %}
<div class="modal" id="emailmodal" style="display: none">
	<form action="{{ path('sendEmail') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		<div class="modal-header">
			<h3>{% trans %}send.email{% endtrans %} - {{ event.name }}</h3>
		</div>
		<div class="modal-body">
			<div>{{ form_errors(form) }}</div>
			{{ form_label(form.subject) }}
			{{ form_widget(form.subject) }}
			{{ form_label(form.sender) }}
			{{ form_widget(form.sender) }}
			{{ form_label(form.message) }}
			{{ form_widget(form.message) }}
		</div>
		<div class="modal-footer">
			<input type="submit" class="btn btn-info" value="{% trans %}send{% endtrans %}">
		</div>
	</form>
</div>