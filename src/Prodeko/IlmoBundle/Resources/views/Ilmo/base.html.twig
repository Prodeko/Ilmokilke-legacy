
{% if  (kiltis is defined and kiltis) %}
	{% set navbarClass = "navbar-inner kiltis" %}
{% else %}
	{% set navbarClass ="navbar-inner" %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{% trans %}title{% endtrans %}{% endblock %}</title>
        <link rel="stylesheet/less" type="text/css" href="{{ asset('css/less/bootstrap.less') }}" />

        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	{% block navbar %}
    	<div class ="navbar">
    		<div class="{{ navbarClass }}">
    		<div class="container">
    			<div class="span6" id="nav-header">
    				<ul class="nav">
    				<li><a href="{{ path('list') }}"><h1>{% trans %}title{% endtrans %}</h1></a></li>
    				{% if is_granted('ROLE_USER') %}
    					<li><a href="{{ path('logout') }}">Kirjaudu ulos</a></li>
    				{% endif %}
    				</ul>
    			</div>
    			
    			{# http://stackoverflow.com/questions/9378714/get-current-url-in-twig-template
    			<div class="btn-group" id="lang-select">
    				<a class="btn" type="button" href="fi">Suomi</a>
    				<a href="en" class="btn" type="button">English</a>
    				<a href="spurdo" class="btn" type="button">:---D:DDD</a>
    			
    			</div>#}
    		</div>
    		</div>
    	</div>
    	{% endblock%}
        {% block body %}{% endblock %}
        {% include 'ProdekoIlmoBundle:Ilmo:footer.html.twig' %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset('js/jQuery-1.7.1.min.js') }}"><\/script>')</script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/functions.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/less.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
