{% extends 'ProdekoIlmoBundle:Ilmo:base.html.twig' %}

{% block title %}
	Vitun ilmokilke
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="span9" id="title">
				<h1>Ilmokilke</h1>
			</div>
			<div class="span3">
				<h3>T&auml;h&auml;n voisi kirjoittaa jotain</h3>
			</div>
		</div>
		<div class="row" id="content">
			<div class="span12">
    			<h2 id="eventtitle">{{ eventname }}</h2>
    			<p id="eventtime">{{ starttime|date("m/d/Y") }}</p>
    			<p id="eventsummary">{{ summary }}</p>
    			<button id="eventsubscribe" class="btn" data-toggle="modal" href="#subscriptionmodal">Ilmoittaudu</button>
    			<!-- Start subscription modal -->
    			<div class="modal" id="subscriptionmodal">
    				<div class="modal-header">
					<button class="close" data-dismiss="modal">×</button>
						<h3>Ilmoittaudu tapahtumaan</h3>
					</div>
					<div class="modal-body">
						<p>Toimiikohan tama?</p>
					</div>
					<div class="modal-footer">
						<a href="#" class="btn">Close</a>
						<a href="#" class="btn btn-primary">Save changes</a>
					</div>
    			</div>
    			<!-- End subscription modal -->
    		</div>
    	</div>
    	{% include 'ProdekoIlmoBundle:Ilmo:footer.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/event.js') }}"></script>
{% endblock %}
