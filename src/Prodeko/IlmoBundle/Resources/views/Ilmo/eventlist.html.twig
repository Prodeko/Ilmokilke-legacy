{% extends '::base.html.twig' %}

{% block stylesheets %}
	<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}
	Vitun ilmokilke
{% endblock %}

{% block body %}

<div class="container">
		<div class="row">
			<div class="span9" id="title">
				<h1>Ilmokilke</h1>
			</div>
			<div class="span3">
				<h3>T&auml;h&auml;n voisi kirjoittaa jotain</h3>
			</div>
		</div>

<h2>Ilmoittautuminen k&aumlynniss&auml</h2>
{% for event in activeEvents %}
	<div class="row" id="content">
			<div class="span6">
			<a href={{ path('show', {'id': event.id}) }}><h2 rel="popover" data-content="{{ event.summary }}">{{ event.name }}</h2></a>
			<p>{{ event.takesPlace | date("d.m.Y G:i") }}</p>
			</div>
    </div>
{% endfor %}

<h2>Tulevia tapahtumia</h2>
{% for event in upcomingEvents %}
	<div class="row" id="content">
			<div class="span6">
			<a href={{ path('show', {'id': event.id}) }}><h2 rel="popover" data-content="{{ event.summary }}">{{ event.name }}</h2></a>
			<p>{{ event.takesPlace | date("d.m.Y G:i") }}</p>
			</div>
    </div>
{% endfor %}

<h2>Ilmoittautuminen p&auml&aumlttynyt</h2>
{% for event in pastEvents %}
	<div class="row" id="content">
			<div class="span6">
			<a href={{ path('show', {'id': event.id}) }}><h2 rel="popover" data-content="{{ event.summary }}">{{ event.name }}</h2></a>
			<p>{{ event.takesPlace | date("d.m.Y G:i") }}</p>
			</div>
    </div>
{% endfor %}
</div>
{% endblock %}
